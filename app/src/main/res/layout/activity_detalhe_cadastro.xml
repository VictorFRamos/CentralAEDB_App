<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="centralaedb.centralaedb_app.detalheCadastro"
    android:padding="10dp"
    android:background="#ffffff">
    >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Nome"
        android:id="@+id/editText5"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="30dp"
        android:hint="MatrÃ­cula"
        android:layout_below="@+id/editText5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Curso"
        android:id="@+id/textView"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/listView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        tools:listitem="@android:layout/simple_list_item_single_choice" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ano"
        android:id="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listView" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/listView2"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        tools:listitem="@android:layout/simple_list_item_single_choice" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finalizar"
        android:id="@+id/btnProximo"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/listView2"
        android:layout_alignEnd="@+id/listView2"
        android:layout_below="@+id/listView2"
        android:background="#5cb85c"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</RelativeLayout>
