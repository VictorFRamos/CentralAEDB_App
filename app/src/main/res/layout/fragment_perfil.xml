<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="#ffffff">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="189dp"
        android:id="@+id/vPerfil"
        android:background="@mipmap/anonimo"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="0dp"
        android:layout_alignTop="@+id/btnEditarPerfil"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/tvTel" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Perfil"
        android:id="@+id/btnEditarPerfil"
        android:textColor="#ffffff"
        android:background="#d9534f"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/vPerfil"
        android:layout_gravity="right|top"
        android:layout_marginTop="39dp"
        android:layout_marginRight="3dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvNome"
        android:layout_alignParentEnd="true"
        android:textSize="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_alignStart="@+id/btnEditarPerfil"
        android:layout_below="@+id/btnEditarPerfil" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvCursoAno"
        android:layout_alignParentEnd="true"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_alignStart="@+id/btnEditarPerfil"
        android:layout_below="@+id/tvPaisCivilIdade" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvPaisCivilIdade"
        android:layout_alignParentEnd="true"
        android:textSize="12dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_alignStart="@+id/btnEditarPerfil"
        android:layout_below="@+id/tvNome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvEnderecoNumero"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_toEndOf="@+id/vPerfil"
        android:layout_below="@+id/tvCursoAno" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvBairroCidUf"
        android:textSize="12dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_toEndOf="@+id/vPerfil"
        android:layout_below="@+id/tvEnderecoNumero" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvEmail"
        android:textSize="12dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_toEndOf="@+id/vPerfil"
        android:layout_below="@+id/tvBairroCidUf" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tvTel"
        android:textSize="12dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/tvNome"
        android:layout_below="@+id/tvEmail" />

    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/elvDetalhe"
        tools:listitem="@android:layout/simple_list_item_2"
        android:layout_below="@+id/vPerfil"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Perfil"
        android:id="@+id/textView10"
        android:textColor="#337ab7"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView11"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView11"
        android:background="@android:drawable/ic_menu_mylocation"
        android:textColor="#337ab7"
        android:backgroundTint="#337ab7"
        android:minHeight="25dp"
        android:maxWidth="25dp"
        android:minWidth="25dp"
        android:maxHeight="25dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/tvNome" />

</RelativeLayout>