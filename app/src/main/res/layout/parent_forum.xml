<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Materia"
        android:id="@+id/tvNomeMateria"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#337ab7"
        android:textStyle="bold"
        android:layout_marginLeft="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivUltimoComentar"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:background="@mipmap/anonimo"
        android:maxWidth="40dp"
        android:maxHeight="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/tvNomeMateria"
        android:layout_alignBottom="@+id/tvNumeroResposta"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="N topicos"
        android:id="@+id/tvNumeroTopicos"
        android:layout_below="@+id/tvNomeMateria"
        android:textAlignment="textEnd"
        android:layout_marginRight="5dp"
        android:layout_alignStart="@+id/tvNomeMateria"
        android:layout_toStartOf="@+id/ivUltimoComentar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="N respostas"
        android:id="@+id/tvNumeroResposta"
        android:textAlignment="textEnd"
        android:layout_below="@+id/tvNumeroTopicos"
        android:layout_alignStart="@+id/tvNomeMateria"
        android:layout_alignEnd="@+id/tvNumeroTopicos" />

</RelativeLayout>